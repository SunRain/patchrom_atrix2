<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/colorstrip" />
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_below="@id/colorstrip">
        <RelativeLayout android:id="@id/artist_half_container" android:background="@color/black" android:padding="@dimen/half_and_half_container_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
            <ImageView android:id="@id/half_artist_image" android:layout_width="fill_parent" android:layout_height="@dimen/half_and_half_image_height" android:scaleType="centerCrop" />
            <TextView android:id="@id/half_artist_image_text" android:visibility="gone" android:layout_alignBottom="@id/half_artist_image" style="@style/HalfText" />
        </RelativeLayout>
        <RelativeLayout android:id="@id/album_half_container" android:background="@color/black" android:padding="@dimen/half_and_half_container_padding" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1.0">
            <ImageView android:id="@id/half_album_image" android:layout_width="fill_parent" android:layout_height="@dimen/half_and_half_image_height" android:scaleType="centerCrop" />
            <TextView android:id="@id/half_album_image_text" android:layout_alignBottom="@id/half_album_image" style="@style/HalfText" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>